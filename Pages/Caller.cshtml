@page
@model CallerModel

@if(Model.LoggedIn) {
    <style>
        td{
            cursor:pointer;
        }
    </style>

    <H1>Caller!</H1>
    <button type="button" class="btn btn-primary newGame" id="newGame">New Game</button>
    <partial name="_Board"/>

    @section Scripts {
        <script src="~/js/board.js"></script>
        <script>
            const numbers = document.querySelectorAll("td.number");
            numbers.forEach(function(number) {
                number.addEventListener("click", function() {
                    const value = number.getAttribute("data-value");
                    const selected=(number.classList.contains("selected")).toString();

                    console.log(`number clicked: ${value} - selected: ${selected}`);
                    connection.invoke("CallNumber", value,selected).catch(function (err) {
                        return console.error(err.toString());
                    });
                });
            });

            const newGame = document.getElementById("newGame");
            newGame.addEventListener("click",function(){
                connection.invoke("NewGame").catch(function (err) {
                    return console.error(err.toString());
                });
            })
        </script>
    }
}
else{
    <style>
        .loginForm{
            width:20px;
        }
    </style>
   <form method="post">
        <h1> Please Login</h1>
        <div class="loginForm">Username:</div> <input type="text" name="username"/> 
        <br/><br/>
        
        <div class="loginForm">Password:</div> <input type="password" name="password"/>
        <br/><br/>
        
        <input type="submit" name="submit" value="submit"/>
   </form>
}

